// app/api/upload-resume/route.ts
import { NextResponse } from "next/server";
import { Buffer } from "buffer";
import { supabaseAdmin } from "@/lib/supabaseAdmin";

export const runtime = "nodejs";

export async function POST(req: Request) {
  try {
    const client = supabaseAdmin;

    // If env vars are missing, we don't want a crash â€“ just a clear message.
    if (!client) {
      console.error(
        "Supabase admin client not initialised. Check SUPABASE_URL and SUPABASE_SERVICE_ROLE_KEY."
      );
      return NextResponse.json(
        {
          ok: false,
          message:
            "File upload is not configured yet on our side. Please submit your application and email your CV to hello@resourcin.com.",
        },
        { status: 500 }
      );
    }

    const contentType = req.headers.get("content-type") || "";
    if (!contentType.includes("multipart/form-data")) {
      return NextResponse.json(
        { ok: false, message: "Invalid content type for file upload." },
        { status: 400 }
      );
    }

    const formData = await req.formData();
    const file = formData.get("file") as File | null;
    const jobSlug = (formData.get("jobSlug") as string | null) || "general";

    if (!file || file.size === 0) {
      return NextResponse.json(
        { ok: false, message: "No file uploaded." },
        { status: 400 }
      );
    }

    // Optional: very basic size guard (e.g. 10MB)
    const MAX_SIZE = 10 * 1024 * 1024;
    if (file.size > MAX_SIZE) {
      return NextResponse.json(
        {
          ok: false,
          message: "File too large. Please upload a CV under 10MB.",
        },
        { status: 400 }
      );
    }

    const ext = file.name.split(".").pop() || "pdf";
    const path = `job-${jobSlug}/${Date.now()}-${Math.random()
      .toString(36)
      .slice(2)}.${ext}`;

    const arrayBuffer = await file.arrayBuffer();
    const buffer = Buffer.from(arrayBuffer);

    const { data, error } = await client.storage
      .from("resumes")
      .upload(path, buffer, {
        cacheControl: "3600",
        upsert: false,
        contentType: file.type || "application/octet-stream",
      });

    if (error) {
      console.error("Supabase upload error:", error);
      return NextResponse.json(
        {
          ok: false,
          message:
            error.message ||
            "Could not upload CV due to a storage error. Please email your CV instead.",
        },
        { status: 500 }
      );
    }

    const { data: publicData, error: urlError } = client.storage
      .from("resumes")
      .getPublicUrl(data.path);

    if (urlError) {
      console.error("Supabase getPublicUrl error:", urlError);
      return NextResponse.json(
        {
          ok: false,
          message:
            urlError.message ||
            "We stored your CV but could not generate a public link. Please email it to us as backup.",
        },
        { status: 500 }
      );
    }

    return NextResponse.json({
      ok: true,
      url: publicData.publicUrl,
    });
  } catch (error: any) {
    console.error("Upload-resume API error:", error);
    return NextResponse.json(
      {
        ok: false,
        message:
          error?.message ||
          "Something went wrong while uploading your CV. Please try again or email it directly.",
      },
      { status: 500 }
    );
  }
}
