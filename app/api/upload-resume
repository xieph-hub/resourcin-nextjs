// app/api/upload-resume/route.ts
import { NextResponse } from "next/server";
import { createClient } from "@supabase/supabase-js";

export const runtime = "nodejs";
export const dynamic = "force-dynamic";

const supabaseUrl = process.env.SUPABASE_URL;
const supabaseServiceKey = process.env.SUPABASE_SERVICE_ROLE_KEY;

function getSupabase() {
  if (!supabaseUrl || !supabaseServiceKey) {
    throw new Error(
      "SUPABASE_URL or SUPABASE_SERVICE_ROLE_KEY is missing on the server."
    );
  }
  return createClient(supabaseUrl, supabaseServiceKey);
}

export async function POST(req: Request) {
  try {
    const supabase = getSupabase();

    const formData = await req.formData();
    const file = formData.get("file");
    const jobSlugRaw = formData.get("jobSlug");

    if (!(file instanceof File)) {
      return NextResponse.json(
        { ok: false, message: "No file was received by the server." },
        { status: 400 }
      );
    }

    const jobSlug =
      typeof jobSlugRaw === "string" && jobSlugRaw.trim().length > 0
        ? jobSlugRaw
        : "general";

    const safeSlug = jobSlug.replace(/[^a-zA-Z0-9-_]/g, "-") || "general";

    const originalName = file.name || "cv";
    const safeName = originalName.replace(/[^\w.-]/g, "_");
    const timestamp = Date.now();
    const path = `${safeSlug}/${timestamp}-${safeName}`;

    const { data, error } = await supabase.storage
      .from("resumes")
      .upload(path, file, {
        cacheControl: "3600",
        upsert: false,
        contentType: file.type || "application/octet-stream",
      });

    if (error || !data) {
      console.error("Supabase upload error:", error);
      return NextResponse.json(
        {
          ok: false,
          message:
            error?.message ||
            "Supabase returned an unknown error during upload.",
        },
        { status: 500 }
      );
    }

    const {
      data: { publicUrl },
    } = supabase.storage.from("resumes").getPublicUrl(data.path);

    return NextResponse.json(
      { ok: true, url: publicUrl ?? null },
      { status: 200 }
    );
  } catch (err: any) {
    console.error("Upload handler error:", err);
    const msg =
      typeof err?.message === "string"
        ? err.message
        : "Unexpected error in upload handler.";
    return NextResponse.json({ ok: false, message: msg }, { status: 500 });
  }
}
